{% import 'web/macro/menu.twig' as m %}
<div class="dropdown dropdown-end">
    <div tabindex="0" role="button" class="btn btn-ghost md:hidden px-1">
        {% if app.user %}
        {{ app.user.name }}
        <div class="avatar">
            <div class="w-12 rounded-full">
                <img src="{{ app.user.avatar }}" alt="{{ app.user.name }}" />
            </div>
        </div>
        {% else %}
        <a class="pe-2" href="{{ menu.href }}">{{ menu.title }}</a>
        {% endif %}
    </div>
    {% if app.user %}
    <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
        {% for item in menu.sub %}
        {{ m.item(item) }}
        {% endfor %}
    </ul>
    {% endif %}
</div>
