{% macro themeitem(theme) %}
<li><input type="radio" name="theme-dropdown" class="theme-controller btn btn-sm btn-block btn-ghost justify-start" aria-label="{{ theme|capitalize }}" value="{{ theme }}"/></li>
{% endmacro %}

<li>
    {% if app.user %}
    <details class="mt-2">
    {% else %}
    <details>
        {% endif %}
        <summary>Theme</summary>
        <ul id="themeSwitcher" class="p-2 bg-base-400 max-h-[70vh] overflow-y-auto">
            {% for theme in themes %}
                {{ _self.themeitem(theme) }}
            {% endfor %}
        </ul>
    </details>
</li>
